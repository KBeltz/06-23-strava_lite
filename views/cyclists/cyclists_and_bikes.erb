  <TH>Last Name</TH>
  <TH>Bike Name</TH>
  
  <% @cyclists_and_bikes.each do |item| %>
  
    <TR>
      <TD><%= "#{item.id}" %>.</TD> 
      <TD><%= "#{item.first_name}" %></TD> 
      <TD><%= "#{item.last_name}" %></TD> 
      <TD><%= "#{item.bike}" %></TD>
    </TR>
    
    
  
  <% end %>

</TABLE>

